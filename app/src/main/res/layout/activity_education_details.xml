<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad1"
    tools:context=".UID.EducationDetailsActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/edu_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@mipmap/edu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal"
                android:text="Educational Details"
                android:textColor="#010101"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/organization_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:hint="Organization" />

            <EditText
                android:id="@+id/degree_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:hint="Degree" />

            <EditText
                android:id="@+id/location_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:hint="Location" />

            <Spinner
                android:id="@+id/start_year_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/year_items"
                android:prompt="@string/yyyy"
                android:layout_margin="16dp"/>

            <Spinner
                android:id="@+id/end_year_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/year_items"
                android:prompt="@string/yyyy"
                android:layout_margin="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Add your Certificate"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/certi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@mipmap/photo" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAccent"
                android:text="Save"
                android:textColor="#010101" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>